@model Repositorio.Entidades.Administrador

@{
    ViewBag.Title = "Cadastrar Administrador";
    Layout = "~/Views/Shared/_Layout_Form.cshtml";
}

<div class="row">
    <div class="col-lg-12 col-md-12 heading">
        <h1 class="page-header"><i class="ec-pencil"></i> Cadastrar Administrador </h1>
        <ul class="breadcrumb"> </ul>
    </div>
</div>
<div class="outlet">
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="panel panel-default plain">
                <div class="panel-heading white-bg">
                </div>
                <div class="panel-body">

                    @if (ViewBag.Exception != null)
                    {
                        <div class="col-lg-12 col-md-12">
                            <div class="panel panel-danger panel-closed toggle panelRefresh panelClose showControls">
                                <div class="panel-heading">
                                    <h4 class="panel-title"> Erro ao realizar operação, tente novamente! </h4>
                                </div>
                                <div class="panel-body">
                                    <font size="2"> @ViewBag.Exception </font>
                                </div>
                            </div>
                        </div>
                    }

                    @using (Html.BeginForm("Cadastrar", "Administrador", FormMethod.Post, new { @class = "form-horizontal group-border hover-stripped" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        
                        <div class=form-group>
                            <label class="col-lg-2 col-md-2 control-label"> @Html.LabelFor(model => model.ADLogin)</label>
                            <div class="col-lg-5 col-md-5">
                                @Html.EditorFor(model => model.ADLogin, new { htmlAttributes = new { @class = "form-control limitInput", @maxlength = "255" } })
                                @Html.ValidationMessageFor(model => model.ADLogin)
                            </div>
                        </div>

                        <div class=form-group>
                            <label class="col-lg-2 col-md-2 control-label"> @Html.LabelFor(model => model.ADSenha)</label>
                            <div class="col-lg-5 col-md-5">
                                @Html.EditorFor(model => model.ADSenha, new { htmlAttributes = new { @class = "form-control limitInput", @maxlength = "255" } })
                                @Html.ValidationMessageFor(model => model.ADSenha)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Cadastrar" class="btn btn-default" />
                            </div>
                        </div>
                        
                    }

                </div>
            </div>
        </div>
    </div>
</div>
