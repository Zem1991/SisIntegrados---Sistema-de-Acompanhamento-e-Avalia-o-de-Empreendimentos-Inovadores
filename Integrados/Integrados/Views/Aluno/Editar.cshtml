@model Repositorio.Entidades.Aluno

@{
    ViewBag.Title = "Editar Aluno";
}

<div class="row">
    <div class="col-lg-12 col-md-12 heading">
        <h1 class="page-header"><i class="ec-pencil"></i>Editar Aluno</h1>
        <ul class="breadcrumb"> </ul>
    </div>
</div>
<div class="outlet">
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="panel panel-default plain">
                <div class="panel-heading white-bg">
                </div>
                <div class="panel-body">

                    @if (ViewBag.Exception != null)
                    {
                        <div class="col-lg-12 col-md-12">
                            <div class="panel panel-danger panel-closed toggle panelRefresh panelClose showControls">
                                <div class="panel-heading">
                                    <h4 class="panel-title"> Erro ao realizar operação, tente novamente! </h4>
                                </div>
                                <div class="panel-body">
                                    <font size="-2"> @ViewBag.Exception </font>
                                </div>
                            </div>
                        </div>
                    }
                    @using (Html.BeginForm("Editar", "Aluno", FormMethod.Post, new { @class = "form-horizontal group-border hover-stripped" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.ALIDaluno)

                        <div class="form-group">
                            @Html.LabelFor(model => model.ALtipoAluno, "ALtipoAluno", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("ALtipoAluno", String.Empty)
                                @Html.ValidationMessageFor(model => model.ALtipoAluno)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ALemail, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ALemail)
                                @Html.ValidationMessageFor(model => model.ALemail)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ALsenha, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ALsenha)
                                @Html.ValidationMessageFor(model => model.ALsenha)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ALnome, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ALnome)
                                @Html.ValidationMessageFor(model => model.ALnome)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ALcurso, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ALcurso)
                                @Html.ValidationMessageFor(model => model.ALcurso)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ALperiodo, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ALperiodo)
                                @Html.ValidationMessageFor(model => model.ALperiodo)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ALcampus, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ALcampus)
                                @Html.ValidationMessageFor(model => model.ALcampus)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ALprojetos, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ALprojetos)
                                @Html.ValidationMessageFor(model => model.ALprojetos)
                            </div>
                        </div>

                      <div class=form-group>
                            <label class="col-lg-2 col-md-2 control-label">  </label>
                            <div class="col-lg-5 col-md-5">
                                @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-info" })
                                <input type="submit" value="Salvar" class="btn btn-info" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
