@model IEnumerable<Repositorio.Entidades.Aluno>

@{
    ViewBag.Title = "Aluno";
    Layout = "~/Views/Shared/_Layout_Datatable.cshtml";
}


<div class="row">
    <div class="col-lg-12 col-md-12 heading">
        <h1 class="page-header"><i class="ec-list"></i> Aluno </h1>
        <ul class="breadcrumb"> </ul>
    </div>
</div>
<div class="outlet">
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="panel panel-default plain">
                <div class="panel-heading white-bg">
                </div>
                <div class="panel-body">

                    @if (ViewBag.Exception != null)
                    {
                        <div class="col-lg-12 col-md-12">
                            <div class="panel panel-danger panel-closed toggle panelRefresh panelClose showControls">
                                <div class="panel-heading">
                                    <h4 class="panel-title"> Erro ao realizar operação, tente novamente! </h4>
                                </div>
                                <div class="panel-body">
                                    <font size="-2"> @ViewBag.Exception </font>
                                </div>
                            </div>
                        </div>
                    }

                    <p>
                        @Html.ActionLink("Novo Aluno", "Cadastrar", null, new { @class = "btn btn-info" })
                    </p>

                    <table class="table display" id="datatable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.ALemail)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ALnome)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ALcurso)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ALperiodo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ALcampus)
                                </th>

                                <th>Ação</th>
                            </tr>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ALemail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ALnome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ALcurso)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ALperiodo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ALcampus)
                                    </td>


                                    <td>
                                        @Html.ActionLink("Editar", "Editar", new { id = item.ALIDaluno }) |
                                        @Html.ActionLink("Detalhes", "Detalhes", new { id = item.ALIDaluno }) |
                                        @Html.ActionLink("Deletar", "Deletar", new { id = item.ALIDaluno })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
