@model Repositorio.Entidades.Professor

@{
    ViewBag.Title = "Cadastrar Professor";
    Layout = "~/Views/Shared/_Layout_Form.cshtml";
}

<div class="row">
    <div class="col-lg-12 col-md-12 heading">
        <h1 class="page-header"><i class="ec-pencil"></i> Cadastrar Professor </h1>
        <ul class="breadcrumb"> </ul>
    </div>
</div>
<div class="outlet">
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="panel panel-default plain">
                <div class="panel-heading white-bg">
                </div>
                <div class="panel-body">

                    @if (ViewBag.Exception != null)
                    {
                        <div class="col-lg-12 col-md-12">
                            <div class="panel panel-danger panel-closed toggle panelRefresh panelClose showControls">
                                <div class="panel-heading">
                                    <h4 class="panel-title"> Erro ao realizar operação, tente novamente! </h4>
                                </div>
                                <div class="panel-body">
                                    <font size="2"> @ViewBag.Exception </font>
                                </div>
                            </div>
                        </div>
                    }

                    @using (Html.BeginForm("Cadastrar", "Professor", FormMethod.Post, new { @class = "form-horizontal group-border hover-stripped" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <div class="form-group">
                            @Html.LabelFor(model => model.PRemail, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PRemail)
                                @Html.ValidationMessageFor(model => model.PRemail)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.PRsenha, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PRsenha)
                                @Html.ValidationMessageFor(model => model.PRsenha)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.PRdisciplinaPrincipal, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PRdisciplinaPrincipal)
                                @Html.ValidationMessageFor(model => model.PRdisciplinaPrincipal)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.PRdepartamento, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PRdepartamento)
                                @Html.ValidationMessageFor(model => model.PRdepartamento)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.PRtipoProfessor, "PRtipoProfessor", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("PRtipoProfessor", String.Empty)
                                @Html.ValidationMessageFor(model => model.PRtipoProfessor)
                            </div>
                        </div>
                        
                        <div class="form-group">
                            @Html.LabelFor(model => model.PRnome, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PRnome)
                                @Html.ValidationMessageFor(model => model.PRnome)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Cadastrar" class="btn btn-default" />
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
