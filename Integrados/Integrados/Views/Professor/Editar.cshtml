@model Repositorio.Entidades.Professor

@{
    ViewBag.Title = "Editar Professor";
}

<div class="row">
    <div class="col-lg-12 col-md-12 heading">
        <h1 class="page-header"><i class="ec-pencil"></i>Editar Professor</h1>
        <ul class="breadcrumb"> </ul>
    </div>
</div>
<div class="outlet">
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="panel panel-default plain">
                <div class="panel-heading white-bg">
                </div>
                <div class="panel-body">

                    @if (ViewBag.Exception != null)
                    {
                        <div class="col-lg-12 col-md-12">
                            <div class="panel panel-danger panel-closed toggle panelRefresh panelClose showControls">
                                <div class="panel-heading">
                                    <h4 class="panel-title"> Erro ao realizar operação, tente novamente! </h4>
                                </div>
                                <div class="panel-body">
                                    <font size="-2"> @ViewBag.Exception </font>
                                </div>
                            </div>
                        </div>
                    }
                    @using (Html.BeginForm("Editar", "Professor", FormMethod.Post, new { @class = "form-horizontal group-border hover-stripped" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.PRIDprofessor)



                        <div class=form-group>
                            <label class="col-lg-2 col-md-2 control-label"> @Html.LabelFor(model => model.PRemail)</label>
                            <div class="col-lg-5 col-md-5">
                                @Html.EditorFor(model => model.PRemail, new { htmlAttributes = new { @class = "form-control limitInput", @maxlength = "255" } })
                                @Html.ValidationMessageFor(model => model.PRemail)
                            </div>
                        </div>

                        <div class=form-group>
                            <label class="col-lg-2 col-md-2 control-label"> @Html.LabelFor(model => model.PRsenha)</label>
                            <div class="col-lg-5 col-md-5">
                                @Html.EditorFor(model => model.PRsenha, new { htmlAttributes = new { @class = "form-control limitInput", @maxlength = "255" } })
                                @Html.ValidationMessageFor(model => model.PRsenha)
                            </div>
                        </div>

                        <div class=form-group>
                            <label class="col-lg-2 col-md-2 control-label"> @Html.LabelFor(model => model.PRdisciplinaPrincipal)</label>
                            <div class="col-lg-5 col-md-5">
                                @Html.EditorFor(model => model.PRdisciplinaPrincipal, new { htmlAttributes = new { @class = "form-control limitInput", @maxlength = "255" } })
                                @Html.ValidationMessageFor(model => model.PRdisciplinaPrincipal)
                            </div>
                        </div>

                        <div class=form-group>
                            <label class="col-lg-2 col-md-2 control-label"> @Html.LabelFor(model => model.PRdepartamento)</label>
                            <div class="col-lg-5 col-md-5">
                                @Html.EditorFor(model => model.PRdepartamento, new { htmlAttributes = new { @class = "form-control limitInput", @maxlength = "255" } })
                                @Html.ValidationMessageFor(model => model.PRdepartamento)
                            </div>
                        </div>

                        <div class=form-group>
                            <label class="col-lg-2 col-md-2 control-label"> @Html.LabelFor(model => model.PRtipoProfessor)</label>
                            <div class="col-lg-5 col-md-5">
                                @Html.DropDownList("PRtipoProfessor", String.Empty)
                            </div>
                        </div>

                        <div class=form-group>
                            <label class="col-lg-2 col-md-2 control-label"> @Html.LabelFor(model => model.PRprojetosQueOrienta)</label>
                            <div class="col-lg-5 col-md-5">
                                @Html.EditorFor(model => model.PRprojetosQueOrienta, new { htmlAttributes = new { @class = "form-control limitInput", @maxlength = "255" } })
                                @Html.ValidationMessageFor(model => model.PRprojetosQueOrienta)
                            </div>
                        </div>

                        <div class=form-group>
                            <label class="col-lg-2 col-md-2 control-label"> @Html.LabelFor(model => model.PRprojetosQueOrientou)</label>
                            <div class="col-lg-5 col-md-5">
                                @Html.EditorFor(model => model.PRprojetosQueOrientou, new { htmlAttributes = new { @class = "form-control limitInput", @maxlength = "255" } })
                                @Html.ValidationMessageFor(model => model.PRprojetosQueOrientou)
                            </div>
                        </div>


                        <div class=form-group>
                            <label class="col-lg-2 col-md-2 control-label"> @Html.LabelFor(model => model.PRnome)</label>
                            <div class="col-lg-5 col-md-5">
                                @Html.EditorFor(model => model.PRnome, new { htmlAttributes = new { @class = "form-control limitInput", @maxlength = "255" } })
                                @Html.ValidationMessageFor(model => model.PRnome)
                            </div>
                        </div>

                        <div class=form-group>
                            <label class="col-lg-2 col-md-2 control-label"> @Html.LabelFor(model => model.PRValido)</label>
                            <div class="col-lg-5 col-md-5">
                                @Html.DropDownList("PRValido", String.Empty)
                            </div>
                        </div>

                        <div class=form-group>
                            <label class="col-lg-2 col-md-2 control-label">  </label>
                            <div class="col-lg-5 col-md-5">
                                @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-info" })
                                <input type="submit" value="Salvar" class="btn btn-info" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

