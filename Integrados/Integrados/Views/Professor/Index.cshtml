@model IEnumerable<Repositorio.Entidades.Professor>

@using Repositorio.DAL.Repositorios

@{
    ViewBag.Title = "Professor";
    Layout = "~/Views/Shared/_Layout_Datatable.cshtml";
}


<div class="row">
    <div class="col-lg-12 col-md-12 heading">
        <h1 class="page-header"><i class="ec-list"></i> Professor </h1>
        <ul class="breadcrumb"> </ul>
    </div>
</div>
<div class="outlet">
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="panel panel-default plain">
                <div class="panel-heading white-bg">
                </div>
                <div class="panel-body">

                    @if (ViewBag.Exception != null)
                    {
                        <div class="col-lg-12 col-md-12">
                            <div class="panel panel-danger panel-closed toggle panelRefresh panelClose showControls">
                                <div class="panel-heading">
                                    <h4 class="panel-title"> Erro ao realizar operação, tente novamente! </h4>
                                </div>
                                <div class="panel-body">
                                    <font size="-2"> @ViewBag.Exception </font>
                                </div>
                            </div>
                        </div>
                    }

                    <p>
                        @Html.ActionLink("Novo Professor", "Cadastrar", null, new { @class = "btn btn-info" })
                    </p>

                    <table class="table display" id="datatable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.PRemail)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PRdisciplinaPrincipal)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PRdepartamento)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PRnome)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TipoUsuario.TUdescricao)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PRValido)
                                </th>
                                <th>Ação</th>
                            </tr>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PRemail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PRdisciplinaPrincipal)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PRdepartamento)
                                    </td>       
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PRnome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TipoUsuario.TUdescricao)
                                    </td>
                                    <td>
                                        @ListasRepositorio.AtivoInativo(item.PRValido)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Editar", new { id = item.PRIDprofessor }) |
                                        @Html.ActionLink("Detalhes", "Detalhes", new { id = item.PRIDprofessor }) |
                                        @Html.ActionLink("Deletar", "Deletar", new { id = item.PRIDprofessor })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>