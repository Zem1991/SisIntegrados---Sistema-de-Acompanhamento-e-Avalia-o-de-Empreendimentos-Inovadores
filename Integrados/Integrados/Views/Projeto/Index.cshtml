@model IEnumerable<Repositorio.Entidades.Projeto> 

@{
    ViewBag.Title = "Projeto";
    Layout = "~/Views/Shared/_Layout_Datatable.cshtml";
}


<div class="row">
    <div class="col-lg-12 col-md-12 heading">
        <h1 class="page-header"><i class="ec-list"></i> Projeto </h1>
        <ul class="breadcrumb"> </ul>
    </div>
</div>
<div class="outlet">
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="panel panel-default plain">
                <div class="panel-heading white-bg">
                </div>
                <div class="panel-body">

                    @if (ViewBag.Exception != null)
                    {
                        <div class="col-lg-12 col-md-12">
                            <div class="panel panel-danger panel-closed toggle panelRefresh panelClose showControls">
                                <div class="panel-heading">
                                    <h4 class="panel-title"> Erro ao realizar operação, tente novamente! </h4>
                                </div>
                                <div class="panel-body">
                                    <font size="-2"> @ViewBag.Exception </font>
                                </div>
                            </div>
                        </div>
                    }

                    <p>
                        @Html.ActionLink("Novo Projeto", "Cadastrar", null, new { @class = "btn btn-info" })
                    </p>

                    <table class="table display" id="datatable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.PRalunoLider)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PRorientador)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PRavaliadorExterno)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PRnome)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.PRnotaFinal)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PRStatusProjeto)
                                </th>
                               
                                <th></th>
                            </tr>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PRalunoLider)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PRorientador)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PRavaliadorExterno)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PRnome)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.PRnotaFinal)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PRStatusProjeto)
                                    </td> 
                                   
                                    <td>
                                        @Html.ActionLink("Editar", "Editar", new { id = item.PRIDprojeto }) |
                                        @Html.ActionLink("Detalhes", "Detalhes", new { id = item.PRIDprojeto }) |
                                        @Html.ActionLink("Deletar", "Deletar", new { id = item.PRIDprojeto })|
                                        @Html.ActionLink("Responder Perguntas", "Responder", new { id = item.PRIDprojeto })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>