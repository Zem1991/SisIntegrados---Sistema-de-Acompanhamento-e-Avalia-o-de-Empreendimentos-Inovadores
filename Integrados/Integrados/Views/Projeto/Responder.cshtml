@model Repositorio.Entidades.Projeto

@{
    ViewBag.Title = "Responder Perguntas";
    Layout = "~/Views/Shared/_Layout_Form.cshtml";
}

<div class="row">
    <div class="col-lg-12 col-md-12 heading">
        <h1 class="page-header"><i class="ec-pencil"></i> Responder Perguntas </h1>
        <ul class="breadcrumb"> </ul>
    </div>
</div>
<div class="outlet">
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="panel panel-default plain">
                <div class="panel-heading white-bg">
                </div>
                <div class="panel-body">

                    @if (ViewBag.Exception != null)
                    {
                        <div class="col-lg-12 col-md-12">
                            <div class="panel panel-danger panel-closed toggle panelRefresh panelClose showControls">
                                <div class="panel-heading">
                                    <h4 class="panel-title"> Erro ao realizar operação, tente novamente! </h4>
                                </div>
                                <div class="panel-body">
                                    <font size="2"> @ViewBag.Exception </font>
                                </div>
                            </div>
                        </div>
                    }

                    @using (Html.BeginForm("Responder", "Projeto", FormMethod.Post, new { @class = "form-horizontal group-border hover-stripped" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.PRIDprojeto)
                        <div class=form-group>
                            <label class="col-lg-2 col-md-2 control-label"> Para quem criamos valor? Quais são nossos clientes mais importantes?</label>
                            <div class="col-lg-5 col-md-5">
                                <textarea cols="20" id="pergunta1" name="pergunta1" rows="2" style="width: 450px;"></textarea>
                            </div>
                        </div>


                        <div class=form-group>
                            <label class="col-lg-2 col-md-2 control-label">
                                Que valor proporcionou a nossos clientes?
                                Que problemas de nossos clientes estão solucionados?
                            </label>
                            <div class="col-lg-5 col-md-5">
                                <textarea cols="20" id="pergunta2" name="pergunta2" rows="2" style="width: 450px;"></textarea>
                            </div>
                        </div>

                        <div class=form-group>
                            <label class="col-lg-2 col-md-2 control-label">
                                Que meios preferem utilizar nosso segmento de mercado?
                                Como estabelecer contato com os clientes?
                            </label>
                            <div class="col-lg-5 col-md-5">
                                <textarea cols="20" id="pergunta3" name="pergunta3" rows="2" style="width: 450px;"></textarea>
                            </div>
                        </div>

                        <div class=form-group>
                            <label class="col-lg-2 col-md-2 control-label">
                                Que tipo de relacionamento que cada segmento de cliente
                                espera ter para estabelecer e manter sua preferencia?
                            </label>
                            <div class="col-lg-5 col-md-5">
                                <textarea cols="20" id="pergunta4" name="pergunta4" rows="2" style="width: 450px;"></textarea>
                            </div>
                        </div>

                        <div class=form-group>
                            <label class="col-lg-2 col-md-2 control-label">
                                Porque valor os nossos clientes realmente estão dispostos a pagar?
                                Como gostariam de pagar?
                            </label>
                            <div class="col-lg-5 col-md-5">
                                <textarea cols="20" id="pergunta5" name="pergunta5" rows="2" style="width: 450px;"></textarea>
                            </div>
                        </div>

                        <div class=form-group>
                            <label class="col-lg-2 col-md-2 control-label">
                                Que recursos físicos, humanos, intelectuais ou econômicos são essenciais?
                                Coisas Imprescindíveis?
                            </label>
                            <div class="col-lg-5 col-md-5">
                                <textarea cols="20" id="pergunta6" name="pergunta6" rows="2" style="width: 450px;"></textarea>
                            </div>
                        </div>

                        <div class=form-group>
                            <label class="col-lg-2 col-md-2 control-label">O que devemos Saber e fazer?</label>
                            <div class="col-lg-5 col-md-5">
                                <textarea cols="20" id="pergunta7" name="pergunta7" rows="2" style="width: 450px;"></textarea>
                            </div>
                        </div>

                        <div class=form-group>
                            <label class="col-lg-2 col-md-2 control-label">Quem são nossos parceiros e provedores fundamentais?</label>
                            <div class="col-lg-5 col-md-5">
                                <textarea cols="20" id="pergunta7" name="pergunta7" rows="2" style="width: 450px;"></textarea>
                            </div>
                        </div>


                        <div class=form-group>
                            <label class="col-lg-2 col-md-2 control-label">Quais são os custos mais importantes do modelo de negocio (Recursos e Atividades chaves).</label>
                            <div class="col-lg-5 col-md-5">
                                <textarea cols="20" id="pergunta8" name="pergunta8" rows="2" style="width: 450px;"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Gravar" class="btn btn-default" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>